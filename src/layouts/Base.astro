---
import Nav from '../components/Nav.astro';

export interface Props {
  title?: string;
}

const { title = 'HanBin – Blog' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>

  <body class="min-h-full bg-zinc-950 text-zinc-100">
    <div class="min-h-screen flex flex-col">
      <header class="border-b border-zinc-800">
        <div class="max-w-3xl mx-auto px-4 py-4">
          <Nav />
        </div>
      </header>

      <main class="flex-1">
        <div class="max-w-3xl mx-auto px-4 py-8">
          <slot />
        </div>
      </main>

      <footer class="border-t border-zinc-800">
        <div class="max-w-3xl mx-auto px-4 py-4 text-xs text-zinc-500">
          © {new Date().getFullYear()} HanBin Marrero-Baik. All rights reserved.
        </div>
      </footer>
    </div>
  </body>
</html>
